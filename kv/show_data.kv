BoxLayout:
    orientation: 'vertical'
    padding: dp(20)
    spacing: dp(15)

    # ===== هذا الجزء العلوي فيه الزر بالصورة =====
    BoxLayout:
        orientation: 'horizontal'
        size_hint_y: None
        height: dp(60)  # ارتفاع الجزء العلوي
        Button:
            size_hint: None, None
            size: dp(50), dp(50)
            on_release: app.show_home_screen()
            Image:
                source: 'kv/images/image.png'
                allow_stretch: True
                keep_ratio: True

    # ===== هذا الجزء السفلي فيه الجدول =====
    GridLayout:
        cols: 5
        size_hint_y: None
        row_default_height: dp(40)
        row_force_default: True
        spacing: dp(10)

        Label:
            text: 'student'
            bold: True
        Label:
            text: 'book'
            bold: True
        Label:
            text: 'code'
            bold: True        
        Label:
            text: 'from'
            bold: True
        Label:
            text: 'to'
            bold: True
